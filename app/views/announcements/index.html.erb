<h1>Hello world!</h1>
<form class="filter_form">
  <%= select("plan", "name", Database::Announcements::Plan.all.collect(&:name)) %>
  <%= select("color", "name", Database::Announcements::Color.all.collect(&:name)) %>
  <%= select("brand", "name", Database::Brands::Brand.all.collect(&:name)) %>
  <%= select("device", "name", Database::Brands::Device.all.collect(&:name)) %>
  <%= submit_tag "Filter", :class => "btn btn-success" %>
</form>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <caption>List of announcements</caption>
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Model</th>
        <th scope="col">Brand</th>
        <th scope="col">Color</th>
        <th scope="col">Plan</th>
        <th scope="col">Amount</th>
        <th scope="col">Price</th>
      </tr>
    </thead>
    <tbody>
      <% @announcements.each_with_index do |record, index| %>
        <tr>
          <th scope="row"><%= index %></th>
          <td><%= record.device_colors.device.name %></td>
          <td><%= record.device_colors.device.brand.name %></td>
          <td><%= record.device_colors.color.name %></td>
          <td><%= record.plan.name %></td>
          <td><%= record.amount %></td>
          <td><%= record.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>